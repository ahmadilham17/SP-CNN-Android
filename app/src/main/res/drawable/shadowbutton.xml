<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="5dp">
        <shape>
            <solid android:color="#A6AEBF" />
            <corners android:radius="19dp" />
